---
const { title } = Astro.props;

// Get current language
const currentLang = Astro.currentLocale || 'en';
const homeUrl = currentLang === 'zh' ? '/zh/' : '/';
---

<nav>
  <div class="bar">
    
    <a href={homeUrl} class="nav-brand">Main's</a>
    <div class="nav-links">
      <select id="language-select" class="language-select">
        <option value="en">English</option>
        <option value="zh">中文</option>
      </select>
    </div>
  </div>
    
 
</nav>

<script>
  // Import Astro's navigate function for client-side routing
  import { navigate } from 'astro:transitions/client';

  // Get current path
  const currentPath = window.location.pathname;
  const currentLang = currentPath.startsWith('/zh/') ? 'zh' : 'en';

  // Set the selected language in the dropdown
  const languageSelect = document.getElementById('language-select') as HTMLSelectElement;
  if (languageSelect) {
    languageSelect.value = currentLang;

    // Handle language change
    languageSelect.addEventListener('change', (e) => {
      const selectedLang = (e.target as HTMLSelectElement).value;

      if (selectedLang === 'zh') {
        // For Chinese, prepend /zh to the path
        if (currentPath === '/' || currentPath.startsWith('/zh/')) {
          // If already at root or /zh path, go to /zh
          navigate('/zh/');
        } else {
          // Otherwise, insert /zh before the path
          const newPath = currentPath.startsWith('/')
            ? `/zh${currentPath}`
            : `/zh/${currentPath}`;
          navigate(newPath);
        }
      } else {
        // For English, remove /zh prefix if present
        if (currentPath.startsWith('/zh/')) {
          navigate(currentPath.substring(3));
        } else if (currentPath === '/zh/') {
          navigate('/');
        } else {
          navigate(currentPath);
        }
      }
    });
  }
</script>

<style>
/* Navigation Styles */
:root {
  --mint-green: #90EE90;
  --dark-mint: #228B22;
  --white: #ffffff;
  --light-gray: #fafaf7;
  --max-width: 1200px;
}

nav {
  background-color: var(--white);
  border-bottom: 1px solid var(--light-gray);
  padding: 1rem;
  position: sticky;
  top: 0;
  /* z-index: 100; */
  width: 100%;
  
}

.bar {
  max-width: var(--max-width);
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}


.nav-brand {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--dark-mint);
  text-decoration: none;
}

.btn {
  display: inline-block;
  padding: 0.75rem 1.5rem;
  background-color: var(--mint-green);
  color: var(--dark-mint);
  text-decoration: none;
  border-radius: 8px;
  font-weight: 600;
  transition: all 0.3s ease;
  border: none;
  cursor: pointer;
}

.btn:hover {
  background-color: var(--dark-mint);
  color: var(--white);
  transform: translateY(-2px);
}

/* Language Select */
.language-select {
  padding: 0.5rem 1rem;
  border: 1px solid var(--light-gray);
  border-radius: 8px;
  background-color: var(--white);
  color: var(--dark-mint);
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.language-select:hover {
  border-color: var(--dark-mint);
}

.language-select:focus {
  outline: none;
  border-color: var(--dark-mint);
  box-shadow: 0 0 0 2px var(--mint-green);
}

/* Layout */
.container {
  max-width: var(--max-width);
  margin: 0 auto;
  padding: 0 1rem;
}

/* Responsive Design */
@media (max-width: 768px) {
  nav .container {
    flex-direction: column;
    gap: 1rem;
  }
}
</style>